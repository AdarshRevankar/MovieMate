<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="FontRegular">
        <item name="android:fontFamily">@font/roboto_mono_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FontMedium">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FontBold">
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LoginTitle" parent="FontBold">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="LoginSubTitle" parent="FontRegular">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="GenericButton" parent="FontBold">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextError" parent="FontRegular">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextReviewContent" parent="FontMedium">
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextReviewTitle" parent="FontRegular">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextCardTitle" parent="FontMedium">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="DialogFullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>